{
  "name": "code-share",
  "version": "1.0.0",
  "description": "CodeShare - Collaborative real-time code editor with Socket.IO",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development pnpm run --parallel dev",
    "build": "cross-env NODE_ENV=production pnpm run --recursive build",
    "start": "cross-env NODE_ENV=production pnpm --filter ./server start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "collaborative",
    "code-editor",
    "realtime",
    "express",
    "preact",
    "socket.io",
    "monaco-editor"
  ],
  "author": "loadept",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.6.2",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "typescript-eslint": "^8.38.0"
  }
}
